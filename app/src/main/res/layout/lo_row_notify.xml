<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"

    android:layout_marginTop="10dp"

    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:minHeight="80dp"
        android:padding="15dp"
        android:id="@+id/rl_nfy_contr"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
       >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_notify"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/dogandcat" />

        <TextView
            android:id="@+id/txtNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_notify"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/txtNfyTIme"

            android:layout_toRightOf="@+id/img_notify"
            android:fontFamily="@font/roboto_regular"
            android:layout_centerVertical="true"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtNfyTIme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_notify"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/img_notify"
            android:layout_centerVertical="true"
            android:text="1 hour"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:background="@color/silver_dark"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="15dp"
    android:layout_width="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    card_view:cardCornerRadius="16dp"

    card_view:cardElevation="0dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_shard_by"
            android:visibility="gone"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"

            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="30dp"

                android:id="@+id/img_shrdByPets"

                android:adjustViewBounds="true"
                android:visibility="visible"


                android:layout_alignParentLeft="true"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_shrdByPets"
                android:textStyle="bold"
                android:id="@+id/txtShrdByName"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rl_shard_by"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl_cmnt_dots"
    android:paddingRight="5dp"
    android:layout_marginTop="10dp"
    android:layout_alignParentRight="true"
    >
    <ImageView
        android:layout_width="20dp"
        android:src="@drawable/dots"
        android:id="@+id/img_dots"

        android:adjustViewBounds="true"
        android:visibility="visible"


        android:layout_alignParentRight="true"
        android:layout_height="30dp" />

</RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:minHeight="200dp"
            android:layout_below="@+id/rl_shard_by"
            android:adjustViewBounds="true"



            android:id="@+id/imgFeedPic"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_below="@+id/imgFeedPic"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imgProfPic"

            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/dogandcat"
            android:layout_height="60dp" />
        <TextView
            android:layout_width="220dp"
            android:layout_toRightOf="@+id/imgProfPic"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgProfPic"

            android:layout_marginLeft="10dp"

            android:text="Tangy"

            android:textSize="22sp"
            android:maxLines="1"
            android:textStyle="bold"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:layout_below="@+id/imgFeedPic"
            android:id="@+id/txtPetName"

            />

        <ImageView
            android:id="@+id/imgCommentCountPic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imgProfPic"


            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:adjustViewBounds="true"
            android:src="@drawable/comment" />
        <TextView
            android:layout_width="30dp"
            android:id="@+id/txtComntCount"
            android:layout_alignTop="@+id/imgCommentCountPic"
            android:layout_toRightOf="@+id/imgCommentCountPic"
            android:layout_marginLeft="-48dp"
            android:layout_marginTop="3dp"

            android:text=" 15"


            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="02/12/2017 sdghd gsdghsgd hsgd h adhg"
            android:layout_toLeftOf="@+id/txtCreatedTime"

            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"

            android:layout_toRightOf="@+id/imgProfPic"
            android:layout_below="@+id/txtPetName"
            android:id="@+id/txtPostDate"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtCreatedTime"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="10dp"


            android:layout_alignTop="@+id/imgProfPic"
            android:layout_below="@+id/imgFeedPic"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txtPostContent"
            android:fontFamily="@font/roboto_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"

            android:ellipsize="end"
            android:layout_below="@+id/imgProfPic"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/vw1"
            android:layout_below="@+id/txtPostContent"
            android:background="#D1D1D1"
            android:layout_height="1dp">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/status_contr"
            android:layout_below="@+id/vw1"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_like_shr_cnt"

                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Likes"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:textSize="16sp"
                    android:id="@+id/txtLikeCnt"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Shares"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:id="@+id/txtShreCnt"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/vw2"
                android:layout_below="@+id/txtPostContent"
                android:background="#D1D1D1"
                android:layout_height="1dp">
            </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:orientation="horizontal"
            android:gravity="center_horizontal"

            android:layout_height="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_like_contr"
                android:gravity="center"
                android:layout_weight="1"
                >
             <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:adjustViewBounds="true"
                 android:id="@+id/imgLike"
                 android:layout_marginLeft="5dp"

                 android:src="@drawable/like"

                 >

             </ImageView>
                <TextView
                    android:id="@+id/txtLike"
                    android:text="Like"
                    android:layout_marginLeft="7dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_toRightOf="@+id/imgLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/rl_comnt_contr"
                android:layout_weight="0.9"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgComment"

                    android:adjustViewBounds="true"
                    android:src="@drawable/comment"

                    />
                <TextView
                    android:id="@+id/txtComment"
                    android:text="Comment"
                    android:layout_marginLeft="7dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_toRightOf="@+id/imgComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/rl_shr_contr"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imgShare"

                    android:adjustViewBounds="true"
                    android:src="@drawable/share"

                    />
                <TextView
                    android:id="@+id/txtShare"
                    android:text="Share"
                    android:layout_marginLeft="7dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_toRightOf="@+id/imgShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/rounded_full_popup">

        <ImageView
            android:id="@+id/image_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/robofont"
            android:src="@drawable/cancel"
            android:textSize="25dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/image_close"
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtMsg"
            android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"

    android:layout_below="@+id/txtMsg"
    android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_cnfrm"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_left_btn_bg"
            android:fontFamily="@font/roboto_regular"
            android:layout_below="@+id/scroll_info_contr"
            android:text="Yes"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    <Button
        android:id="@+id/btn_cancel"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/gradient_right_btn_bg"
        android:fontFamily="@font/roboto_regular"
        android:layout_below="@+id/scroll_info_contr"
        android:text="No"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>
    </RelativeLayout>

</RelativeLayout>
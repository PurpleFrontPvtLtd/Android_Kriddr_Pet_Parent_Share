<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/silver_dark"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"

    android:paddingBottom="5dp">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="0dp"
    android:background="#ffffff"
    android:layout_marginTop="10dp"
    android:layout_height="105dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
         android:background="#ffffff"
        android:layout_height="wrap_content">
      <com.facebook.drawee.view.SimpleDraweeView
          android:layout_width="60dp"
          android:id="@+id/imgProfPic"


          android:layout_height="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tanqy"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/rl_follow_contr"
            android:id="@+id/txtPetName"
            android:fontFamily="@font/roboto_regular"
            android:textSize="22sp"
            android:layout_toRightOf="@+id/imgProfPic"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Domm"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/rl_follow_contr"
            android:layout_below="@+id/txtPetName"
            android:id="@+id/txtPetParent"
            android:fontFamily="@font/roboto_regular"
            android:textSize="22sp"
            android:layout_toRightOf="@+id/imgProfPic"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="100dp"
            android:id="@+id/rl_follow_contr"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/btn_follow"
            android:visibility="visible"
            android:src="@drawable/follow_txt"
            android:layout_height="50dp" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>